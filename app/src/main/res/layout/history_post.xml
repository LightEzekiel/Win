<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#34EFE9E9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#34EFE9E9"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="4"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/wgameday3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.1"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="4dp"
                android:text="FOOTBALL"
                android:textAllCaps="true"
                android:textColor="#B9000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hdisplayDateTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="oct 14, 2021"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:background="#34EFE9E9"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardbackgrond">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cardbackgrond"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/hlegueTextView3"
                        android:layout_width="320dp"
                        android:layout_height="20dp"
                        android:text="England premier league"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:textStyle="normal|bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hclubTextView3"
                        android:layout_width="321dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/white"
                        android:text="chelsea liverpool"
                        android:textAllCaps="true"
                        android:textColor="#3E3636"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hlegueTextView3" />

                    <TextView
                        android:id="@+id/hPredictionTxtVw31"
                        android:layout_width="321dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="5dp"
                        android:text="home win"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hclubTextView3" />

                    <TextView
                        android:id="@+id/houtcomeTextVw"
                        android:layout_width="172dp"
                        android:layout_height="29dp"
                        android:padding="5dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/lightBlue"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/textView31"
                        app:layout_constraintTop_toBottomOf="@+id/hPredictionTxtVw31" />

                    <TextView
                        android:id="@+id/hoddTxtVw3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:layout_marginEnd="2dp"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:textColor="@color/lightBlue"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/hgamestateTextVw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="2dp"
                        android:padding="5dp"
                        android:textAllCaps="true"
                        android:textColor="#71B7D6"
                        android:textStyle="bold|italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hoddTxtVw3" />

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="Outcome :"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hPredictionTxtVw31" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>